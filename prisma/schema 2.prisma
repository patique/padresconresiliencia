generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider  = "postgresql"
  url       = env("DATABASE_URL")
  // directUrl = env("DIRECT_URL") // Optional if using neon pooling
}

model Product {
  id          String   @id @default(cuid())
  title       String
  description String
  price       Float
  imageUrl    String?
  slug        String   @unique
  fileUrl     String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}
